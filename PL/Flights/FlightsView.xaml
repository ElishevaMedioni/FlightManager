               Center="32.000454,34.870743" ZoomLevel="5.0" AnimationLevel="None" Margin="15,24,10,10" Grid.Column="1" MouseDoubleClick="myMap_MouseDoubleClick" Grid.ColumnSpan="2" Grid.RowSpan="2" >
