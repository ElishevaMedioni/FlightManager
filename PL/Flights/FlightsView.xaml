               Center="32.000454,34.870743" ZoomLevel="5.0" AnimationLevel="None" Margin="15,0,10,50" Grid.Column="2" MouseDoubleClick="myMap_MouseDoubleClick" Grid.RowSpan="7" Grid.Row="1" >
            <!-- <m:Pushpin Location="34.620574,34.34942"/>-->
        </m:Map>
        <!--<Button Content="Start Track" HorizontalAlignment="Left" Height="33" Margin="646,10,0,0" VerticalAlignment="Top" Width="126" Click="Button_Click_1" Grid.Column="2"/>-->
        <TextBox x:Name="Counter" HorizontalAlignment="Left" Margin="777,15,0,10" TextWrapping="Wrap" Text="1" Width="45" Grid.Column="2"/>



        <TextBlock x:Name="date" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200" Height="50" Grid.Row="1" FontFamily="Candara" FontSize="16" Margin="0,50,0,0" FontWeight="Bold" Grid.Column="1"/>
        <TextBlock x:Name="dateheb" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200" Height="50" FontFamily="Candara" FontSize="18" FontWeight="Bold" Grid.Row="1" Grid.Column="1"/>
        <UserControl x:Name="FlightData" Grid.Column="2" Margin="405,98,27,62" Grid.Row="3" Grid.RowSpan="4"/>
    </Grid>
</UserControl>
